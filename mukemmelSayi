public class Main {

    public static void main(String[] args) {
        /*  Matematikte bazı pozitif tam sayıların pozitif bölenleri toplamı, 
            sayının kendisinin iki katına eşittir. Bu tür sayılara “mükemmel sayı” 
            denir. Örneğin 6 sayısını ele alalım: 1, 2, 3 ve 6 bu sayının bölenleridir
            ve tüm bu bölenlerin toplamı, yani 1+2+3+6, sayının iki katı olan
            12'ye eşittir.   28-->1,2,4,7,14   */
        
        int number=28;
        int total=0;
        
        if (number<1){
            System.out.println("geçersiz değer");
        }
        

        for (int i=1; i<number;i++){
            if (number%i==0){
                total=total+i;
            }
        }
        
        if (total==number){
            System.out.println("mükemmel sayı");
        }else{
            System.out.println("mükemmel sayı değil");
        }
    }  
}
